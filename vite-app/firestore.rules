rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ========== Helper Functions ==========
    // Role hierarchy: super_admin > admin > librarian
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Admin or Super Admin - can manage libraries, floors, shelves, books
    function hasAdminRole() {
      return isAuthenticated() && 
             (request.auth.token.isAdmin == true || 
              request.auth.token.role in ['admin', 'super_admin']);
    }
    
    // Librarian, Admin, or Super Admin - can manage shelves, books, scans, corrections
    // Librarians: limited to assigned library (enforced in app UI; rules allow write)
    function hasLibrarianOrAdminRole() {
      return isAuthenticated() && 
             (request.auth.token.isAdmin == true || 
              request.auth.token.role in ['librarian', 'admin', 'super_admin']);
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
             request.auth.token.role == 'super_admin';
    }
    
    // ========== Admin Users ==========
    match /admin_users/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin();
    }
    
    // ========== Libraries (top-level) ==========
    // Only admin/super_admin can create/update libraries (librarians cannot)
    match /libraries/{libraryId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasAdminRole();
      
      // Floors - only admin/super_admin (librarians cannot create floors)
      match /floors/{floorId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if hasAdminRole();
        
        // Shelves - librarians can manage shelves in their library
        match /shelves/{shelfId} {
          allow read: if isAuthenticated();
          allow create, update, delete: if hasLibrarianOrAdminRole();
          
          // Shelf books - librarians manage books on shelves
          match /books/{bookIsbn} {
            allow read: if isAuthenticated();
            allow create, update, delete: if hasLibrarianOrAdminRole();
          }
        }
      }
    }
    
    // ========== Books (global catalog) ==========
    match /books/{bookId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasLibrarianOrAdminRole();
    }
    
    // ========== Book Locations (shelf positions) ==========
    match /book_locations/{locationId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasLibrarianOrAdminRole();
    }
    
    // ========== Scans ==========
    match /scans/{scanId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if hasLibrarianOrAdminRole();
    }
    
    // ========== Corrections ==========
    match /corrections/{correctionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if hasLibrarianOrAdminRole();
    }
    
    // ========== Analytics ==========
    match /analytics/{analyticsId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasAdminRole();
    }
    
    // ========== System Configuration ==========
    match /system/{configId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isSuperAdmin();
    }
  }
}
